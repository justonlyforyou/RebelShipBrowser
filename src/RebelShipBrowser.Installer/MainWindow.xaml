<Window x:Class="RebelShipBrowser.Installer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RebelShip Browser - Setup"
        Height="500" Width="600"
        Background="{StaticResource BackgroundColor}"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Icon="Resources/icon.ico">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource CardBackground}"
                BorderBrush="{StaticResource BorderColor}" BorderThickness="0,0,0,1"
                Padding="25,20">
            <StackPanel>
                <TextBlock Text="RebelShip Browser" FontSize="24" FontWeight="Bold"
                          Foreground="{StaticResource TextColor}"/>
                <TextBlock FontSize="12" Foreground="{StaticResource TextSecondary}" Margin="0,5,0,0">
                    <Run Text="by "/><Run Text="justonlyforyou" Foreground="{StaticResource PrimaryColor}"/>
                </TextBlock>
            </StackPanel>
        </Border>

        <!-- Content Frame -->
        <Frame x:Name="ContentFrame" Grid.Row="1" NavigationUIVisibility="Hidden"
               Margin="25"/>

        <!-- Footer -->
        <Border Grid.Row="2" Background="{StaticResource CardBackground}"
                BorderBrush="{StaticResource BorderColor}" BorderThickness="0,1,0,0"
                Padding="25,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="CancelButton" Grid.Column="0" Content="Cancel"
                       Click="CancelButton_Click"
                       Background="Transparent"
                       Foreground="{StaticResource TextSecondary}"
                       BorderBrush="{StaticResource BorderColor}"
                       BorderThickness="1"
                       Padding="20,10" FontSize="13"
                       HorizontalAlignment="Left"
                       Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                               BorderBrush="{TemplateBinding BorderBrush}"
                                               BorderThickness="{TemplateBinding BorderThickness}"
                                               CornerRadius="4" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

                <Button x:Name="BackButton" Grid.Column="1" Content="Back"
                       Click="BackButton_Click"
                       Background="Transparent"
                       Foreground="{StaticResource TextColor}"
                       BorderBrush="{StaticResource BorderColor}"
                       BorderThickness="1"
                       Padding="20,10" FontSize="13"
                       Margin="0,0,10,0"
                       Visibility="Collapsed"
                       Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                               BorderBrush="{TemplateBinding BorderBrush}"
                                               BorderThickness="{TemplateBinding BorderThickness}"
                                               CornerRadius="4" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

                <Button x:Name="NextButton" Grid.Column="2" Content="Install"
                       Click="NextButton_Click"
                       Background="{StaticResource PrimaryColor}"
                       Foreground="White"
                       BorderThickness="0"
                       Padding="25,10" FontSize="13"
                       Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                               CornerRadius="4" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>
