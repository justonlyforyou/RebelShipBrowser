<Page x:Class="RebelShipBrowser.Installer.Pages.CompletePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Complete">

    <StackPanel VerticalAlignment="Center">
        <TextBlock Text="Installation Complete!"
                  FontSize="20" FontWeight="SemiBold"
                  Foreground="{StaticResource SuccessColor}"
                  TextWrapping="Wrap" Margin="0,0,0,20"/>

        <TextBlock Text="RebelShip Browser has been successfully installed."
                  FontSize="14" Foreground="{StaticResource TextSecondary}"
                  TextWrapping="Wrap" Margin="0,0,0,30"/>

        <CheckBox x:Name="LaunchAppCheckbox" IsChecked="True"
                 Foreground="{StaticResource TextColor}"
                 FontSize="14" Margin="0,0,0,10">
            <CheckBox.Content>
                <TextBlock Text="Launch RebelShip Browser" Foreground="{StaticResource TextColor}"/>
            </CheckBox.Content>
        </CheckBox>

        <TextBlock Text="Click Finish to exit the setup wizard."
                  FontSize="13" Foreground="{StaticResource TextSecondary}"
                  TextWrapping="Wrap" Margin="0,20,0,0"/>
    </StackPanel>
</Page>
