<Page x:Class="RebelShipBrowser.Installer.Pages.InstallPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Installing">

    <StackPanel VerticalAlignment="Center">
        <TextBlock Text="Installing RebelShip Browser"
                  FontSize="20" FontWeight="SemiBold"
                  Foreground="{StaticResource TextColor}"
                  TextWrapping="Wrap" Margin="0,0,0,20"/>

        <TextBlock x:Name="StatusText" Text="Preparing installation..."
                  FontSize="14" Foreground="{StaticResource TextSecondary}"
                  TextWrapping="Wrap" Margin="0,0,0,20"/>

        <ProgressBar x:Name="ProgressBar" Height="6"
                    Foreground="{StaticResource PrimaryColor}"
                    Background="{StaticResource BorderColor}"
                    Value="0" Maximum="100"
                    Margin="0,0,0,10"/>

        <TextBlock x:Name="ProgressText" Text="0%"
                  FontSize="12" Foreground="{StaticResource TextSecondary}"
                  HorizontalAlignment="Right"/>
    </StackPanel>
</Page>
