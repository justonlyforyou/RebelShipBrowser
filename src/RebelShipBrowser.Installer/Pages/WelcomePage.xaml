<Page x:Class="RebelShipBrowser.Installer.Pages.WelcomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Welcome">

    <StackPanel VerticalAlignment="Center">
        <TextBlock Text="Welcome to RebelShip Browser"
                  FontSize="20" FontWeight="SemiBold"
                  Foreground="{StaticResource TextColor}"
                  TextWrapping="Wrap" Margin="0,0,0,20"/>

        <TextBlock Text="This wizard will install RebelShip Browser on your computer."
                  FontSize="14" Foreground="{StaticResource TextSecondary}"
                  TextWrapping="Wrap" Margin="0,0,0,10"/>

        <TextBlock FontSize="14" Foreground="{StaticResource TextSecondary}"
                  TextWrapping="Wrap" Margin="0,0,0,30">
            <Run Text="RebelShip Browser provides:"/>
        </TextBlock>

        <StackPanel Margin="20,0,0,0">
            <TextBlock FontSize="13" Foreground="{StaticResource TextColor}" Margin="0,0,0,8">
                <Run Text="- "/><Run Text="Auto-login using your Steam session"/>
            </TextBlock>
            <TextBlock FontSize="13" Foreground="{StaticResource TextColor}" Margin="0,0,0,8">
                <Run Text="- "/><Run Text="System tray integration"/>
            </TextBlock>
            <TextBlock FontSize="13" Foreground="{StaticResource TextColor}" Margin="0,0,0,8">
                <Run Text="- "/><Run Text="Quick access to ShippingManager"/>
            </TextBlock>
        </StackPanel>

        <TextBlock FontSize="13" Foreground="{StaticResource TextSecondary}"
                  TextWrapping="Wrap" Margin="0,30,0,0">
            <Run Text="Installation folder:"/>
        </TextBlock>

        <Grid Margin="0,5,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="InstallPathText" Grid.Column="0"
                    FontSize="12" Padding="8,6"
                    Background="{StaticResource BackgroundColor}"
                    Foreground="{StaticResource TextColor}"
                    BorderBrush="{StaticResource BorderColor}"
                    TextChanged="InstallPathText_TextChanged"/>
            <Button x:Name="BrowseButton" Grid.Column="1" Content="Browse..."
                   Padding="12,6" Margin="8,0,0,0"
                   Background="{StaticResource BorderColor}"
                   Foreground="{StaticResource TextColor}"
                   BorderBrush="{StaticResource BorderColor}"
                   Click="BrowseButton_Click"/>
        </Grid>

        <TextBlock Text="Click Install to begin the installation."
                  FontSize="13" Foreground="{StaticResource TextSecondary}"
                  TextWrapping="Wrap" Margin="0,20,0,0"/>
    </StackPanel>
</Page>
