<Window x:Class="RebelShipBrowser.Installer.UninstallWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Uninstall RebelShip Browser"
        Height="300" Width="450"
        Background="{StaticResource BackgroundColor}"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Icon="Resources/icon.ico">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Content -->
        <StackPanel Grid.Row="0" VerticalAlignment="Center" Margin="30">
            <TextBlock x:Name="TitleText" Text="Uninstall RebelShip Browser"
                      FontSize="18" FontWeight="SemiBold"
                      Foreground="{StaticResource TextColor}"
                      TextWrapping="Wrap" Margin="0,0,0,15"/>

            <TextBlock x:Name="MessageText"
                      Text="Are you sure you want to uninstall RebelShip Browser?"
                      FontSize="14" Foreground="{StaticResource TextSecondary}"
                      TextWrapping="Wrap" Margin="0,0,0,10"/>

            <ProgressBar x:Name="ProgressBar" Height="6"
                        Foreground="{StaticResource PrimaryColor}"
                        Background="{StaticResource BorderColor}"
                        Visibility="Collapsed"
                        IsIndeterminate="True"
                        Margin="0,15,0,0"/>
        </StackPanel>

        <!-- Footer -->
        <Border Grid.Row="1" Background="{StaticResource CardBackground}"
                BorderBrush="{StaticResource BorderColor}" BorderThickness="0,1,0,0"
                Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="CancelButton" Grid.Column="1" Content="Cancel"
                       Click="CancelButton_Click"
                       Background="Transparent"
                       Foreground="{StaticResource TextSecondary}"
                       BorderBrush="{StaticResource BorderColor}"
                       BorderThickness="1"
                       Padding="20,10" FontSize="13"
                       Margin="0,0,10,0"
                       Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                               BorderBrush="{TemplateBinding BorderBrush}"
                                               BorderThickness="{TemplateBinding BorderThickness}"
                                               CornerRadius="4" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

                <Button x:Name="UninstallButton" Grid.Column="2" Content="Uninstall"
                       Click="UninstallButton_Click"
                       Background="{StaticResource ErrorColor}"
                       Foreground="White"
                       BorderThickness="0"
                       Padding="20,10" FontSize="13"
                       Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                               CornerRadius="4" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>
