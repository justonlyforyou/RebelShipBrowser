<Window x:Class="RebelShipBrowser.DownloadDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Downloading Update"
        Height="220" Width="500"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BackgroundColor}"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Closing="Window_Closing">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="StatusText" Grid.Row="0" Text="Downloading update..."
                  Foreground="{StaticResource TextColor}" FontSize="14" Margin="0,0,0,15"
                  TextWrapping="Wrap"/>

        <ProgressBar x:Name="DownloadProgress" Grid.Row="1"
                    Height="20" Minimum="0" Maximum="100" Value="0"
                    Background="{StaticResource CardBackground}"
                    Foreground="{StaticResource PrimaryColor}"
                    BorderBrush="{StaticResource BorderColor}"
                    BorderThickness="1"/>

        <Grid Grid.Row="2" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock x:Name="ProgressText" Grid.Column="0" Text="0 MB / 0 MB"
                      Foreground="{StaticResource TextSecondary}" FontSize="12"/>

            <TextBlock x:Name="SpeedText" Grid.Column="1" Text="0 MB/s"
                      Foreground="{StaticResource TextSecondary}" FontSize="12"/>
        </Grid>

        <Button x:Name="CancelButton" Grid.Row="4" Content="Cancel" Click="CancelButton_Click"
               Background="{StaticResource CardBackground}" Foreground="{StaticResource TextColor}"
               BorderThickness="1" BorderBrush="{StaticResource BorderColor}"
               Padding="20,8" Cursor="Hand" HorizontalAlignment="Center" Margin="0,15,0,0">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                       BorderBrush="{TemplateBinding BorderBrush}"
                                       BorderThickness="{TemplateBinding BorderThickness}"
                                       CornerRadius="4" Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>
        </Button>
    </Grid>
</Window>
