<Window x:Class="RebelShipBrowser.LoginMethodDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RebelShip Browser - Login Method"
        Height="280" Width="450"
        Background="{StaticResource BackgroundColor}"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow"
        Icon="Resources/icon.ico">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="15"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center">
            <TextBlock Text="RebelShip Browser" FontSize="22" FontWeight="Bold"
                      Foreground="{StaticResource TextColor}" HorizontalAlignment="Center"/>
            <TextBlock Text="Choose your login method" FontSize="12"
                      Foreground="{StaticResource TextSecondary}" HorizontalAlignment="Center" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Steam Login Button -->
        <Button Grid.Row="2" x:Name="SteamLoginButton" Click="SteamLoginButton_Click"
                Height="50" Cursor="Hand">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{StaticResource PrimaryColor}" CornerRadius="6"
                            BorderThickness="0">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="ðŸŽ®" FontSize="20" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="Use Steam Login" FontSize="14" FontWeight="SemiBold" Foreground="White"/>
                                <TextBlock Text="Auto-extract session from Steam client" FontSize="10" Foreground="#cccccc"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <!-- Browser Login Button -->
        <Button Grid.Row="4" x:Name="BrowserLoginButton" Click="BrowserLoginButton_Click"
                Height="50" Cursor="Hand">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{StaticResource CardBackground}" CornerRadius="6"
                            BorderBrush="{StaticResource BorderColor}" BorderThickness="1">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="ðŸŒ" FontSize="20" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="Use Browser Login" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource TextColor}"/>
                                <TextBlock Text="Login manually in browser window" FontSize="10" Foreground="{StaticResource TextSecondary}"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <!-- Cancel Button -->
        <Button Grid.Row="6" x:Name="CancelButton" Content="Cancel" Click="CancelButton_Click"
                Background="Transparent" Foreground="{StaticResource TextSecondary}"
                BorderThickness="0" FontSize="11" Cursor="Hand"
                HorizontalAlignment="Center"/>
    </Grid>
</Window>
